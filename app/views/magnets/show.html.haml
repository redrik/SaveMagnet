- model_class = Magnet
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:url) + ':'
  %br
  = @magnet.url

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), magnets_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_magnet_path(@magnet), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), magnet_path(@magnet), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
