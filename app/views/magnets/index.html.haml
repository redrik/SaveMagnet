- model_class = Magnet

.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      
      %th= model_class.human_attribute_name(:url)
      
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @magnets.each do |magnet|
    - magnet_name = magnet.url.match(/(?<=dn=)(.+?)(?=&|$)/)
      %tr
        
        %td 
          = link_to (URI.unescape(magnet_name.to_s)), magnet.url
        
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_magnet_path(magnet), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), magnet_path(magnet), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_magnet_path, :class => 'btn btn-primary'
